@import 'lib.styl';


//*----------------------------------------------------------------*/
// @Index

.categories-list .category {
    a {
        padding 0 20px;
    }

    .extra {
        display: block;
        padding: 10px 20px;
        margin: 15px -20px 0;
        font-size: 12px;
        font-weight: normal;
        text-transform: uppercase;
        background: rgba(0, 0, 0, .05);
        border-radius: 0 0 6px 6px;
    }
}


//*----------------------------------------------------------------*/
// @Banner
.stats {
    a {
        color: $light-text-color;
        text-decoration: none;

        &:hover {
            text-decoration: underline;
        }
    }
}
