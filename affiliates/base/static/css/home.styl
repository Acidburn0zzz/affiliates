// The home page

@import 'lib.styl';

#intro {
    {section-dark}

    .button {
        min-width: 200px;
    }

}

#howitworks {
    li {
        padding: 0 0 20px 80px;
        position: relative;
    }

    h3 {
        font-size: 20px;
        font-weight: bold;
        text-transform: uppercase;
        margin: 0 0 .75em;

        &:before {
            position: absolute;
            top: -10px;
            left: 0;
            width: 80px;
            display: block;
            font-family: 'Font Awesome';
            font-size: 70px;
            font-weight: normal;
            color: darken($medium-gray, 15%);
            text-shadow: 0 0 3px rgba(255, 255, 255, .25);
        }
    }

    .step-1 h3:before {
        content: '\f0a6'; /* finger */
    }

    .step-2 h3:before {
        content: '\f0c4'; /* scissors */
    }

    .step-3 h3:before {
        content: '\f0c1'; /* link */
    }
}

#rewards {
    {section-orange}

    h2 {
        color: $light-text-color;
        text-shadow: none;
        margin: 0 0 .5em;
    }

    p {
        text-align: center;
        margin: 0 0 .5em;
    }
}

#leaderboard {
    .stats {
        font-size: 24px;
        font-style: italic;
        text-align: center;
        line-height: 1.1;
        margin: 0 $grid-column-width 1em;

        li {
            padding: 1em 0;

            &:nth-child(2) {
                border: groove rgba(255, 255, 255, .75);
                border-width: 2px 0;
            }

            strong {
                display: block;
                font-size: 1.25em;
            }
        }
    }

    .more {
        text-align: center;
    }
}



//*----------------------------------------------------------------*/
// @Landscape mobile layout: 440px

@media $media-query-mobile-wide {

    #howitworks {
        li {
            padding-left: 100px;
        }

        h3:before {
            width: 80px;
            font-size: 80px;
        }
    }
}



//*----------------------------------------------------------------*/
// @Tablet layout: 760px

@media $media-query-tablet {

    #intro {
        h1 {
            font-size: 48px;
        }

        .button {
            font-size: 24px;
        }
    }

    #howitworks {
        li {
            span_narrow(4);
            padding: 140px 0 0;
            text-align: center;
        }

        h3:before {
            left: 0;
            top: 10px;
            width: 100%;
            font-size: 100px;
        }
    }

    #rewards p {
        font-size: 24px;
        margin: 0 $grid-column-width .5em;
    }

    #leaderboard .stats {
        width: $width-tablet;
        margin: 1em auto 2em;

        li {
            width: 30%;
            padding: 0 1%;
            display: inline-block;

            &:nth-child(2) {
                border-width: 0 2px;
            }

        }
    }

}



//*----------------------------------------------------------------*/
// @Desktop layout: 1000px

@media $media-query-desktop {

    #intro h1 {
        font-size: 60px;
    }

    #howitworks li {
        span(4);
    }


    #leaderboard .stats {
        width: $width-tablet;
        margin: 1em auto 2em;

        li {
            width: 30%;
            padding: 0 1%;
            display: inline-block;

            &:nth-child(2) {
                border-width: 0 2px;
            }

        }
    }

}


